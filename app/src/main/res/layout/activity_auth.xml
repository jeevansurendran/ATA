<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthActivity">

    <ImageView
        android:id="@+id/im_auth_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="A red tick of our logo"
        android:layout_marginStart="@dimen/size_l"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_round" />

    <TextView
        android:id="@+id/tv_auth_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_s"
        android:text="@string/work_less"
        android:textSize="@dimen/font_i"
        app:layout_constraintStart_toStartOf="@id/im_auth_check"
        app:layout_constraintTop_toBottomOf="@id/im_auth_check" />

    <Button
        android:id="@+id/btn_auth_google_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue with google"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_auth_copy" />

</androidx.constraintlayout.widget.ConstraintLayout>