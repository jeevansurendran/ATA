<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/size_s"
    android:paddingTop="@dimen/size_s"
    android:paddingBottom="@dimen/size_el"
    tools:context=".ui.shareWorkspace.MainShareWorkspaceFragment">

    <ImageView
        android:id="@+id/ib_share_workspace_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_share_workspace_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_s"
        android:fontFamily="@font/manrope_bold"
        android:text="Add a person"
        app:layout_constraintBottom_toBottomOf="@id/ib_share_workspace_close"
        app:layout_constraintStart_toEndOf="@id/ib_share_workspace_close"
        app:layout_constraintTop_toTopOf="@id/ib_share_workspace_close" />

    <ImageView
        android:id="@+id/im_share_workspace_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_el"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_share_workspace_heading"
        app:srcCompat="@drawable/vect_share_girl" />

    <TextView
        android:id="@+id/tv_share_workspace_link_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_l"
        android:fontFamily="@font/manrope_bold"
        android:text="Workspace Link"
        android:textSize="@dimen/font_m"
        app:layout_constraintStart_toStartOf="@id/tv_share_workspace_heading"
        app:layout_constraintTop_toBottomOf="@id/im_share_workspace_girl" />

    <TextView
        android:id="@+id/tv_share_workspace_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_vt"
        android:textColor="@color/gray_600"
        android:textSize="@dimen/font_n"
        app:layout_constraintStart_toStartOf="@id/tv_share_workspace_link_heading"
        app:layout_constraintTop_toBottomOf="@id/tv_share_workspace_link_heading"
        tools:text="https://ata.xy/workspace/" />

    <Button
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/btn_share_workspace_share"
        android:layout_width="0dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_el"
        android:fontFamily="@font/manrope_semibold"
        android:text="Share URL"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_share_workspace_link" />

</androidx.constraintlayout.widget.ConstraintLayout>

